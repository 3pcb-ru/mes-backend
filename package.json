{
    "name": "mes-backend",
    "description": "NestJS backend application for online MES platform for manufacturing enterprises to manage and optimize their production processes.",
    "version": "1.9.0",
    "private": true,
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "prebuild": "rimraf dist",
        "build": "nest build && cp -r assets dist/",
        "start": "nest start",
        "dev": "nest start --watch",
        "debug": "nest start --debug --watch",
        "prod": "node dist/main",
        "prod:init": "pnpm run db:migrate",
        "prod:start": "pnpm start",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "test": "jest -c jest.config.cjs",
        "test:watch": "jest -c jest.config.cjs --watch",
        "test:integration": "jest -c jest.integration.config.ts",
        "test:integration:watch": "jest -c jest.integration.config.ts --watch",
        "test:e2e": "jest --config=jest.e2e.config.ts",
        "test:cov": "jest --coverage",
        "test:cov:watch": "jest --coverage --watch",
        "test:cov:html": "jest --coverage --coverageReporters='html'",
        "test:cov:summary": "jest --coverage --coverageReporters='text-summary'",
        "test:coverage": "jest -c jest.config.cjs --coverage",
        "changelog:generate": "node -e \"require('fs').mkdirSync('assets',{recursive:true})\" && pnpm dlx git-cliff --config cliff.context.toml -u --context --output assets/changelog.json",
        "db:generate": "drizzle-kit generate",
        "db:push": "drizzle-kit push",
        "db:check": "drizzle-kit check",
        "db:force-push": "drizzle-kit push --force",
        "db:init": "pnpm db:migrate",
        "db:migrate": "drizzle-kit migrate",
        "db:baseline": "tsx scripts/baseline-migrations.ts",
        "db:studio": "drizzle-kit studio",
        "prepare": "husky || true"
    },
    "dependencies": {
        "@nestjs/axios": "^4.0.1",
        "@nestjs/common": "11.1.14",
        "@nestjs/config": "4.0.3",
        "@nestjs/core": "11.1.14",
        "@nestjs/event-emitter": "3.0.1",
        "@nestjs/jwt": "11.0.2",
        "@nestjs/passport": "11.0.5",
        "@nestjs/platform-express": "11.1.14",
        "@nestjs/schedule": "6.1.1",
        "@nestjs/serve-static": "5.0.4",
        "@nestjs/swagger": "11.2.6",
        "@nestjs/terminus": "^11.1.1",
        "bcrypt": "6.0.0",
        "dotenv": "17.3.1",
        "drizzle-orm": "0.45.1",
        "drizzle-zod": "0.8.3",
        "express": "5.2.1",
        "gach": "1.7.5",
        "handlebars": "4.7.8",
        "ioredis": "5.9.3",
        "lru-cache": "11.2.6",
        "minio": "8.0.6",
        "moment-timezone": "0.6.0",
        "nestjs-zod": "5.1.1",
        "nodemailer": "8.0.1",
        "passport": "0.7.0",
        "passport-jwt": "4.0.1",
        "passport-local": "1.0.0",
        "pg": "8.18.0",
        "reflect-metadata": "0.2.2",
        "rimraf": "6.1.3",
        "rxjs": "7.8.2",
        "uuid": "13.0.0",
        "zod": "4.3.6"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.4.2",
        "@commitlint/config-conventional": "^20.4.2",
        "@darraghor/eslint-plugin-nestjs-typed": "7.1.22",
        "@electric-sql/pglite": "0.3.15",
        "@eslint/js": "10.0.1",
        "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
        "@nestjs/cli": "11.0.16",
        "@nestjs/schematics": "11.0.9",
        "@nestjs/testing": "11.1.14",
        "@swc/cli": "0.8.0",
        "@swc/core": "1.15.11",
        "@swc/jest": "0.2.39",
        "@types/bcrypt": "6.0.0",
        "@types/express": "5.0.6",
        "@types/jest": "30.0.0",
        "@types/ms": "^2.1.0",
        "@types/node": "25.3.0",
        "@types/nodemailer": "7.0.11",
        "@types/passport-jwt": "4.0.1",
        "@types/passport-local": "1.0.38",
        "@types/pg": "8.16.0",
        "@types/supertest": "6.0.3",
        "@typescript-eslint/eslint-plugin": "8.56.0",
        "@typescript-eslint/parser": "8.56.0",
        "drizzle-kit": "0.31.9",
        "eslint": "10.0.1",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-prettier": "5.5.5",
        "eslint-plugin-unused-imports": "4.4.1",
        "globals": "17.3.0",
        "husky": "^9.1.7",
        "jest": "30.2.0",
        "prettier": "3.8.1",
        "supertest": "7.2.2",
        "ts-jest": "29.4.6",
        "ts-loader": "9.5.4",
        "ts-node": "10.9.2",
        "tsc": "2.0.4",
        "tsconfig-paths": "4.2.0",
        "tsx": "4.21.0",
        "typescript": "5.9.3"
    }
}
